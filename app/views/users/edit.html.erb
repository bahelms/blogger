<%= provide(:title, "Edit Your Profile") %>
<h1>Edit Your Profile</h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_for @user do |f| %>
      <%= render 'form_fields', f: f %>
      <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>  
  </div>
  <div class="span2 offset10" id="delete">
    <%= link_to 'Delete Account', '#' %>
  </div>
</div>