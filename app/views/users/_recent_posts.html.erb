<div class="row"> 
  <div class="span5">
    <h3>
      Recent Blog Posts
      <small>-- <%= link_to "Archives", user_articles_path(@user) %></small>
    </h3>
    <div class="row">
      <div class="span9">
        <% if @user.articles.any? %>
          <div class="articles">
            <%= render @user.articles %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>