<%= provide(:title, @user.username) %>
<h1><%= @user.username %></h1>

<div class="content">
  <section id="profile" class="offset1">
    <div class="row">
      <div class="span3">
        <%= image_tag("image-placeholder.jpg", alt: "#{@user.username}", 
                                               size: "200x200") %>
      </div>
      <%= render 'users/user_bio' %>
    </div>
  </section>
  <div class="row"> 
    <div class="span4">
      <section id="posts">
        <h2>Recent Blog Posts</h2>
        <div class="row">
          <div class="span6">
            <% if @user.articles.any? %>
              <h4>Articles (<%= @user.articles.count %>)</h4>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
